{{#slick-slider class="intro-slider typeset" arrows=false dots=true infinite=false}}
  <div class="box typeset-padding">
    <h2>Puzzle Slider</h2>
    <p>
      Schiebe die einzelnen
      Teile so schnell wie möglich zu einem Bild!
    </p>
    <figure>
      <img src="assets/pictures/finger-all.png">
    </figure>
  </div>

  <div class="box typeset-padding">
    <h2>Viel Spass</h2>
    <p>
      &hellip; wünscht dir dein Puzzle Team.
    </p>

    <figure class="flex layout-row layout-align-center-center">
      <img class="intro-penguin" src="assets/pictures/penguin-naked.svg">
    </figure>

    <div class="layout-row layout-align-center-center">
      {{#paper-button accent=true raised=true onClick=(route-action 'play')}}
        Loslegen!
      {{/paper-button}}
    </div>
  </div>
{{/slick-slider}}
