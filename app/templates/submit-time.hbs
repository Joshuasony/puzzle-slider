<div class="solved-background"></div>
<form class="puzzle-solved flex"
    onsubmit={{route-action 'submitTime' (hash name=name email=email)}}>
  <div class="timer-time timer-time-solved flex">
    <div>
      {{paper-icon "timer" size=56}}
      {{#best-time as |bestTime|}}
        {{format-timer bestTime.latest}}
      {{/best-time}}
    </div>
  </div>
  <p>
    Neue Bestzeit Ã¼bermitteln<br>
    und entscheiden wohin<br>
    Puzzle 1'500 Franken<br>
    spendet.
  </p>
  <div class="layout-column">
    {{paper-input label="Name" value=name required=true onChange=(action (mut name))}}
    {{paper-input label="Email" value=email type="email" required=true onChange=(action (mut email))}}
  </div>
  <div class="layout-row layout-align-center-center">
    {{#paper-button onClick=(transition-to 'index')}}
      Abbrechen
    {{/paper-button}}
    {{#paper-button
      primary=true
      raised=true
      onClick=(route-action 'submitTime' (hash name=name email=email))
      }}
      Senden
    {{/paper-button}}
  </div>
</form>
