{{#paper-sidenav-container class="sidenav-container"}}
  {{#paper-sidenav
    class="md-whiteframe-z2"
    name="default"
    open=open
    onToggle=(action (mut open))
  }}
    {{#paper-toolbar as |toolbar|}}
      {{#paper-toolbar-tools}}PuzzleSlide{{/paper-toolbar-tools}}
    {{/paper-toolbar}}
    {{#paper-content padding=true}}
      {{#paper-list}}
        {{#menu-item
          active=(eq currentRouteName 'play')
          onClick=(transition-to 'play')
          }}
          {{paper-icon "play-circle-filled"}}
          <div class="md-list-item-text">Puzzle ITC Slider</div>
        {{/menu-item}}
        {{#menu-item}}
          {{paper-icon "stars"}}
          <div class="md-list-item-text">Leaderboard</div>
        {{/menu-item}}
        {{#menu-item}}
          {{paper-icon "help"}}
          <div class="md-list-item-text">Ãœber uns</div>
        {{/menu-item}}
        {{#menu-item
          active=(eq currentRouteName 'intro')
          onClick=(transition-to 'intro')
          }}
          {{paper-icon "play-arrow"}}
          <div class="md-list-item-text">Anleitung</div>
        {{/menu-item}}
      {{/paper-list}}
    {{/paper-content}}
  {{/paper-sidenav}}

  {{#paper-card-content class="flex layout-column"}}
    {{~yield~}}
  {{/paper-card-content}}
{{/paper-sidenav-container}}
